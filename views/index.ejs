<!doctype HTML>
<html>

<head>
    <title>My Angular App!</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="stylesheets/style.css" rel="stylesheet" type="text/css" />
</head>

<body ng-app="flapperNews" ng-controller="MainController">

    <nav class="navbar navbar-default pull-right" ng-controller="NavigationController">
        <ul class="nav navbar-nav">
            <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
            <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
        </ul>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <ui-view></ui-view>
            </div>
        </div>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/app.js"></script>
    <!-- Services/Factories -->
    <script src="/javascripts/services/posts.js"></script>
    <script src="/javascripts/services/authorization.js"></script>
    <!-- Routes -->
    <script src="/javascripts/routes/routes.js"></script>
    <!-- Controllers -->
    <script src="/javascripts/controllers/main.js"></script>
    <script src="/javascripts/controllers/posts.js"></script>
    <script src="/javascripts/controllers/authentification.js"></script>
    <script src="/javascripts/controllers/navigation.js"></script>
</body>

</html>
